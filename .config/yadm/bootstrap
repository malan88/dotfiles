echo "Installing all pacman packages"
pacman -S --noconfirm - < ~/.config/yadm/pkglist.txt

echo "Cloning and installing yay"
git clone https://aur.archlinux.org/packages/yay/
cd yay
makepkg -si

echo "Installing aur packages"
yay -S ~/.config/yadm/pkglist.txt

echo "Installing omz"
sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

echo "Installing vim-plug"
sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

echo "Installing neovim plugins"
nvim --headless +PlugInstall +qall
nvim --headless +CocUpdateSync +qall

echo "cloning passwordstore"
git clone me:passwordstore .password-store

echo "cloning vimwiki"
git clone me:vimwiki

echo "Decrypting and importing secrets"
yadm decrypt
gpg --import .secrets/mas88/mas88.key
