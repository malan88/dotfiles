# function for getting cheat sheats
function cheat() {
    curl cht.sh/$1
}

# Up command, from stackoverflow.  Takes optional number of levels to cd ../
function up(){
    local d=""
    limit=$1
    for ((i=1 ; i <= limit ; i++))
        do
            d=$d/..
        done
    d=$(echo $d | sed 's/^\///')
    if [ -z "$d" ]; then
        d=..
    fi
    cd $d
}

# function for generating .gitignore files
function gi() { curl -sLw n https://www.gitignore.io/api/$@ ;}
